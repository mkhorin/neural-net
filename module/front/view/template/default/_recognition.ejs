<!-- default/_recognition -->
<div class="page" data-page="recognition" data-handler="RecognitionPage">

    <div class="tabs-ghost tabs">
        <div class="nav nav-tabs">
            <a class="nav-item nav-link nav-frozen" href="#" role="tab" data-action="main">
                <span data-t="">Main</span>
            </a>
            <a class="nav-item nav-link nav-frozen active" href="#" role="tab" data-action="recognize">
                <span data-t="">Recognition</span>
            </a>
            <a class="nav-item nav-link nav-frozen" href="#" role="tab" data-action="train">
                <span data-t="">Training</span>
            </a>
            <a class="nav-item nav-link nav-frozen" href="#" role="tab" data-action="test">
                <span data-t="">Testing</span>
            </a>
        </div>
    </div>

    <h1 data-t="">Handwritten digit recognition</h1>

    <p class="mb-3">
        <span data-t="">Draw a number on the area below and click "Recognize".</span>
        <span data-t="">A selected neural network will try to determine the drawn value.</span>
    </p>

    <div class="number-band my-4"></div>

    <div class="row">
        <div class="col-lg-5">
            <div class="form-group mb-4">
                <label class="col-form-label" data-t="">Draw a number from 0 to 9</label>
                <div class="drawing" data-handler="Drawing">
                    <canvas class="drawing-canvas" width="320" height="320"></canvas>
                    <canvas class="drawing-target" width="28" height="28"></canvas>
                    <div class="splash" data-handler="Splash">
                        <div class="splash-text">6</div>
                        <div class="splash-fail">
                            <span class="fas fa-times"></span>
                        </div>
                    </div>
                </div>
                <div class="drawing-tools">
                    <button class="btn-success btn" type="button" data-command="recognize">
                        <span data-t="">Recognize</span>
                    </button>
                    <div class="btn-group">
                        <input type="radio" class="btn-check" name="brush" autocomplete="off" value="18">
                        <label class="btn-outline-secondary btn">
                            <i class="brush-size-1 brush-size"></i>
                        </label>
                        <input type="radio" class="btn-check" name="brush" autocomplete="off" value="24" checked>
                        <label class="btn-outline-secondary btn">
                            <i class="brush-size-2 brush-size"></i>
                        </label>
                        <input type="radio" class="btn-check" name="brush" autocomplete="off" value="28">
                        <label class="btn-outline-secondary btn">
                            <i class="brush-size-3 brush-size"></i>
                        </label>
                    </div>
                    <button class="btn-outline-danger btn" type="button" data-command="erase">
                        <span data-t="">Erase</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-7">

            <div class="form-group">
                <label class="col-form-label">
                    <span data-t="">Percentage of matching the drawn number</span>
                </label>
                <div class="recognition-result" data-handler="RecognitionResult">
                    <div class="recognition-num">
                        <div class="recognition-target">0</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">1</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">2</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">3</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">4</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">5</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">6</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">7</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">8</div>
                        <div class="recognition-output"></div>
                    </div>
                    <div class="recognition-num">
                        <div class="recognition-target">9</div>
                        <div class="recognition-output"></div>
                    </div>
                </div>
            </div>

            <%- include(_view.get('_part/networkSelection')) %>
        </div>
    </div>
</div>